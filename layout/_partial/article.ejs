<article class="<%= item.layout %>">
  <% if (item.photos){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer style="border-bottom: 1px dotted #eee;padding-bottom: 20px;">
      <% if (index){ %>
        <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
        </div>
        <% if (item.comment && config.disqus_shortname){ %>
          <div class="alignleft">
            <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
          </div>
        <% } %>
        <% if (theme.comment_provider == "duoshuo"){ %>
          <div class="alignleft"> 
            <span class="ds-thread-count" data-thread-key="<%- config.root %><%- item.path%>">&nbsp;
            </span>
          </div>
        <% } %>
      <% } else { %>
          <%- partial('post/category') %>
          <%- partial('post/tag') %>
          <%- partial('post/share') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<% if (!index){ %>
  <div id="profile"></div>
<% } %>

<%- partial('comment') %>
